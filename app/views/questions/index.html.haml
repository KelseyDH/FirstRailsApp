//Below jQuery code adds UL/LI tags based on a number input
%h3.title "Listing all numbers:"

:javascript

  function generateUl(number) {
    
    var $ul = $("<ul></ul>");
    for(var i = 0; i < number; i++) {
      var $li = $("<li></li>", {text: "Element" + i});
      $ul.append($li);
    }
    $("body").append($ul);
  }
  generateUl(7);


